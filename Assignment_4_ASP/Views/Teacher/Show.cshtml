@model Assignment_4_ASP.Models.Teacher
@{
    ViewBag.Title = "Show";
}
<!-- inline CSS -->
<style>
    body {
        background-color: lightseagreen;
    }

    h2 {
        color: white;
        font-family: Cambria;
    }
    a {
        color: black;
    }

     a:hover {
            color: white;
     }
</style>
<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back to Teachers</a><br />
